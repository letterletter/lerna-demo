{
  "name": "root",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "build": "lerna run build",
    "doc": "dumi build",
    "predeploy": "npm run doc",
    "deploy": "gh-pages -d docs-dist",
    "start": "dumi dev",
    "size": "ANALYZE=1 dumi build",
    "clean": "lerna clean -y",
    "changelog": "lerna-changelog",
    "test": "jest",
    "publish": "npm run build && lerna publish -m \"chore: publish\" --no-verify-access",
    "prettier": "prettier -c --write \"docs/**/*\" \"packages/**/*\" \"tools/**/*\" \"widgets/**/*\""
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/plugin-syntax-jsx": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/react": "^13.1.1",
    "@testing-library/react-hooks": "^8.0.0",
    "@umijs/plugin-esbuild": "1.x",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.0.5",
    "antd": "^4.x",
    "babel-jest": "^27.5.1",
    "babel-plugin-import": "^1.13.0",
    "commitizen": "^4.2.4",
    "cz-lerna-changelog": "^2.0.3",
    "detect-indent": "^7.0.0",
    "dumi": "^1.1.15",
    "enzyme": "^3.11.0",
    "father-build": "^1.17.2",
    "fetch-jsonp": "^1.1.3",
    "gh-pages": "^3.0.0",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.0.7",
    "monaco-editor-webpack-plugin": "^4.1.1",
    "prettier": "^1.19.1",
    "prismjs": "^1.20.0",
    "react": "^18.0.0-rc.3",
    "react-dom": "^18.0.0-rc.3",
    "react-monaco-editor": "^0.44.0",
    "react-simple-code-editor": "^0.11.0",
    "umi-plugin-hire": "^1.0.3",
    "webpack": "^5.72.0",
    "yorkie": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*",
    "widgets/*"
  ]
}